<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Editing listing</h3>
            <form method="post" novalidate class="needs-validation" enctype="multipart/form-data"
                action="/listings/<%= listing._id %>?_method=PUT">
                <div class="mb-2">
                    <label for="title" class="form-lable">Title</label>
                    <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a title.
                    </div>
                </div>
                <br> <br>
                <div class="mb-2">
                    <label for="description" class="form-lable">Description</label>
                    <textarea rows="6" cols="30" name="listing[description]" placeholder="enter description" required
                        class="form-control"><%= listing.description %></textarea>
                    <div class="invalid-feedback">
                        Please enter a short-description.
                    </div>
                </div>
                <br> <br>

                <div class="mb-2">
                    <p>original Image</p>
                    <img src="<%= originalImageUrl %>" alt="orginal image">
                </div>
                <br>

                <div class="mb-2">
                    <label for="image" class="form-lable">Upload new Image</label>
                    <input name="listing[image]" type="file" class="form-control">
                </div>
                <br> <br>

                <div class="row">
                    <div class="mb-2 col-md-4">
                        <label for="price" class="form-lable">Price</label>
                        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"
                            placeholder="enter price" required>
                        <div class="invalid-feedback">
                            Please enter a valid price.
                        </div>
                    </div>
                    <div class="mb-2 col-md-8">
                        <label for="location" class="form-lable">Location</label>
                        <input name="listing[location]" value="<%= listing.location %>" type="text" required
                            class="form-control" placeholder="enter location">
                        <div class="invalid-feedback">
                            Please enter location.
                        </div>
                    </div>
                </div>
                <br> <br>
                <div class="mb-2">
                    <label for="country" class="form-lable">Country</label>
                    <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control"
                        placeholder="enter country" required>
                    <div class="invalid-feedback">
                        Please enter country.
                    </div>
                </div>
                <br> <br>
                <button class="btn btn-dark edit-btn mb-3 magnet">Save Edit</button>
                <br> <br>
            </form>
        </div>
    </div>
    <script src="/script/ValidationScript.js"></script>