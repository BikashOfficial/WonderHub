<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1><b>SignUp on Wonderhub</b></h1>
            <form action="/signup" method="post" novalidate class="needs-validation">
                <div class="mb-0.5 mt-2">
                    <label for="username" class="form-lable">Username</label>
                    <input name="username" id="username" type="text" class="form-control" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a username.
                    </div>
                </div>

                <div class="mb-0.5 mt-2">
                    <label for="email" class="form-lable">Email</label>
                    <input name="email" id="email" type="email" class="form-control" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter your email.
                    </div>
                </div>

                <div class="mb-0.5  mt-2">
                    <label for="password" class="form-lable">Password</label>
                    <input name="password" id="password" type="password" class="form-control" required />
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter a strong password.
                    </div>
                </div>
                <br>
                <button class="btn btn-success magnet">SignUp</button>
                <!-- <p style="text-align:end; color:rgb(0, 42, 255)"><b>already have an account ?</b></p> -->
            </form>
        </div>
    </div>